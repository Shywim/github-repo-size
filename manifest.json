{
  "manifest_version": 2,
  "name": "Github Repo Size",
  "author": "Matthieu Harl√©",
  "homepage_url": "https://github.com/Shywim/github-repo-size",
  "version": "1.2.0",
  "description": "Add repository size to their github homepage.",
  "options_ui": {
    "page": "src/options.html",
    "browser_style": true
  },
  "applications": {
    "gecko": {
      "id": "github-repo-size@mattelrah.com"
    }
  },
  "icons": {
    "32": "icon/32.png",
    "48": "icon/48.png",
    "64": "icon/64.png",
    "96": "icon/96.png"
  },
  "content_scripts": [{
    "matches": ["*://github.com/*"],
    "js": ["src/index.js"]
  }],
  "permissions": [
    "*://api.github.com/repos/*",
    "storage"
  ]
}